<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.assolutions.altaf.cdlitablet.MainActivity$PlaceholderFragment">

    <ImageView  android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/tajmahal"
        android:layout_marginBottom="70dp"/>

    <LinearLayout android:id="@+id/desc_layout"
        android:layout_width="@dimen/desc_width"
        android:layout_height="@dimen/desc_height"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:elevation="@dimen/elevation"

       >

        <TextView android:id="@+id/desc_title"
            android:text="@string/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:focusable="auto"
            android:fontFamily="@font/belleza"
            android:text="@string/desc_text"
            android:textColor="@color/desc_text" />

    </LinearLayout>


</FrameLayout>